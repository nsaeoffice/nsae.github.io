---
import PageLayout from "@/layouts/PageLayout.astro";
---

<PageLayout title="404: Not Found" description="Page Not Found">
  <main class="min-h-screen w-full flex flex-col justify-center items-center">
    <div class="text-center p-8">
      <h1
        class="text-8xl sm:text-9xl font-bold text-foreground tracking-tighter"
        aria-label="404 Error"
      >
        <span class="digit inline-block">4</span>
        <span class="digit inline-block">0</span>
        <span class="digit inline-block">4</span>
      </h1>

      <h2
        class="fade-in mt-4 text-2xl sm:text-3xl font-semibold text-foreground/80"
      >
        Page Not Found
      </h2>
      <p class="fade-in mt-2 text-foreground/60">
        Sorry, the page you are looking for seems to have taken a wrong turn.
      </p>

      <div class="fade-in mt-8">
        <a
          href="/"
          class="rounded-full bg-primary px-8 py-3 text-sm font-semibold text-primary-foreground shadow-sm transition-colors hover:bg-primary/90 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-black"
        >
          Go Back Home
        </a>
      </div>
    </div>
  </main>
</PageLayout>

<style>
  .digit,
  .fade-in {
    visibility: hidden;
  }
</style>
<script>
  import gsap from "gsap";

  if (typeof window !== "undefined") {
    const tl = gsap.timeline();

    gsap.set(".digit", { y: 50 });
    gsap.set(".fade-in", { y: 20 });

    tl.to(
      ".digit",
      {
        y: 0,
        autoAlpha: 1,
        duration: 0.8,
        ease: "back.out(1.7)",
        stagger: 0.2,
      },
      "+=0.2"
    );

    tl.to(
      ".fade-in",
      {
        autoAlpha: 1,
        y: 0,
        duration: 0.6,
        ease: "power3.out",
        stagger: 0.15,
      },
      "-=0.5"
    );
  }
</script>
