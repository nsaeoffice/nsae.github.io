---
import Badge from "@/components/astro/Badge.astro";
import ClickableCard from "@/components/astro/Card/ClickableCard.astro";
import { SITE_DESCRIPTION, SITE_TITLE, PAGE_SIZE } from "@/consts";
import PageLayout from "@/layouts/PageLayout.astro";
import EventCard from "@/components/astro/Card/EventCard.astro";
import Pagination from "@/components/astro/Pagination.astro";
import type { GetStaticPaths, Page } from "astro";
import type { CollectionEntry } from "astro:content";
import { getCollection } from "astro:content";

export const getStaticPaths: GetStaticPaths = async ({ paginate }) => {
  const allPublishedEvents = (
    await getCollection("events", ({ data }) => {
      // In production, filter out drafts.
      return import.meta.env.MODE !== "production" || data.draft === false;
    })
  ).sort((a, b) => b.data.eventStart.valueOf() - a.data.eventStart.valueOf());

  return paginate(allPublishedEvents, {
    pageSize: PAGE_SIZE,
  });
};

interface Props {
  page: Page<CollectionEntry<"events">>;
}

const { page } = Astro.props;
---

<PageLayout title={SITE_TITLE} description={SITE_DESCRIPTION}>
  <header class="flex flex-col items-center justify-center py-6">
    <Badge variant={"secondary"} size={"sm"} class="capitalize">Events</Badge>
    <h1 class="text-5xl md:text-6xl font-medium pt-4">our latest Events</h1>
  </header>
  <section class="mb-24">
    <div class="flex flex-col gap-6 mb-12">
      {
        page.data.map((event) => {
          return (
            <ClickableCard
              href={`/events/${event.id}/`}
              class="group bg-secondary text-secondary-foreground rounded-xl border border-transparent hover:border-border/50 transition-all overflow-hidden"
            >
              <EventCard {...event} />
            </ClickableCard>
          );
        })
      }
    </div>
    <div class="flex justify-center mt-8">
      <Pagination url={page.url} />
    </div>
  </section>
</PageLayout>
