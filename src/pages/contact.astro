---
import Badge from "@/components/astro/Badge.astro";
import PageLayout from "@/layouts/PageLayout.astro";
import { getCollection } from "astro:content";
import Mail from "@tabler/icons/outline/mail.svg";
import Phone from "@tabler/icons/outline/phone.svg";
import Map from "@tabler/icons/outline/map.svg";
import BrandLinkedin from "@tabler/icons/outline/brand-linkedin.svg";
import BrandX from "@tabler/icons/outline/brand-x.svg";
import BrandFacebook from "@tabler/icons/outline/brand-facebook.svg";
import BrandYoutube from "@tabler/icons/outline/brand-youtube.svg";
import BrandBluesky from "@tabler/icons/outline/brand-bluesky.svg";
import BrandGithub from "@tabler/icons/outline/brand-github.svg";
import ArrowUpRight from "@tabler/icons/outline/arrow-up-right.svg";

const contactInfo = (await getCollection("contacts"))[0];
const { data } = contactInfo;
const { socials } = data;
const socialIcons: Record<string, any> = {
  linkedin: BrandLinkedin,
  twitter: BrandX,
  x: BrandX,
  facebook: BrandFacebook,
  youtube: BrandYoutube,
  bluesky: BrandBluesky,
  github: BrandGithub,
};
---

<PageLayout
  title="Contact Us - NSAE"
  description="Have a question or a project in mind? - NSAE"
>
  <header
    class="contact-header flex flex-col items-center justify-center py-16 md:py-24 text-center px-4"
  >
    <div class="anim-header-badge opacity-0 scale-50">
      <Badge
        variant={"secondary"}
        size={"sm"}
        class="font-mono text-xs uppercase tracking-widest mb-6"
      >
        Contact us
      </Badge>
    </div>
    <h1
      class="anim-header-title invisible font-sans text-5xl md:text-7xl font-medium tracking-tighter pb-4"
    >
      Get in touch
    </h1>
    <p
      class="anim-header-desc font-sans text-xl text-muted-foreground max-w-2xl leading-relaxed opacity-0 translate-y-4"
    >
      Have a question or a project in mind? We'd love to hear from you.
    </p>
  </header>

  <section class="pb-24 px-4 grid grid-cols-1 lg:grid-cols-3 gap-6">
    <div
      class="anim-contact-card col-span-1 rounded-2xl p-8 bg-secondary/30 border border-border/50 flex flex-col justify-between gap-12 hover:bg-secondary/50 transition-colors opacity-0 translate-y-8"
    >
      <div class="space-y-6">
        <span
          class="flex items-center gap-2 font-mono text-xs uppercase tracking-widest text-muted-foreground"
        >
          <Mail class="size-4" /> Email
        </span>
        {
          data.emails && data.emails.length > 0 && (
            <div class="flex flex-col gap-2">
              {data.emails.map((email) => (
                <a
                  href={`mailto:${email}`}
                  class="font-sans text-2xl  font-medium tracking-tight hover:text-primary transition-colors block w-fit"
                >
                  {email}
                </a>
              ))}
            </div>
          )
        }
      </div>
      <span class="font-sans text-sm text-muted-foreground">
        Reach out via email with any questions before our call!
      </span>
    </div>

    <div
      class="anim-contact-card col-span-1 rounded-2xl p-8 bg-secondary/30 border border-border/50 flex flex-col justify-between gap-12 hover:bg-secondary/50 transition-colors opacity-0 translate-y-8"
    >
      <div class="space-y-6">
        <span
          class="flex items-center gap-2 font-mono text-xs uppercase tracking-widest text-muted-foreground"
        >
          <Phone class="size-4" /> Phone
        </span>
        {
          data.phoneNumbers && data.phoneNumbers.length > 0 && (
            <div class="flex flex-col gap-2">
              {data.phoneNumbers.map((phone) => (
                <a
                  href={`tel:${phone}`}
                  class="font-sans text-2xl  font-medium tracking-tight hover:text-primary transition-colors block w-fit"
                >
                  {phone}
                </a>
              ))}
            </div>
          )
        }
      </div>
      <span class="font-sans text-sm text-muted-foreground">
        You can reach out to us by phone to discuss your needs.
      </span>
    </div>

    <div
      class="anim-contact-card col-span-1 rounded-2xl p-8 bg-secondary/30 border border-border/50 flex flex-col justify-between gap-12 hover:bg-secondary/50 transition-colors opacity-0 translate-y-8"
    >
      <div class="space-y-6">
        <span
          class="flex items-center gap-2 font-mono text-xs uppercase tracking-widest text-muted-foreground"
        >
          <Map class="size-4" /> Visit us
        </span>
        <div class="font-sans text-2xl font-medium tracking-tight">
          {
            data.addressLink ? (
              <a
                href={data.addressLink}
                target="_blank"
                rel="noopener noreferrer"
                class="hover:text-primary transition-colors flex items-start gap-2 group"
              >
                {data.address ?? "View on map"}
                <ArrowUpRight class="size-6 text-muted-foreground group-hover:text-primary transition-colors mt-1 shrink-0" />
              </a>
            ) : (
              <span>{data.address ?? "Address not provided"}</span>
            )
          }
        </div>
      </div>
      <span class="font-sans text-sm text-muted-foreground">
        Feel free to stop by during office hours with any questions.
      </span>
    </div>

    {
      socials && (
        <div class="anim-socials-wrapper col-span-1 lg:col-span-3 rounded-2xl p-8 bg-secondary/30 border border-border/50 flex flex-col md:flex-row items-center justify-between gap-6 mt-4 opacity-0 translate-y-8">
          <span class="font-mono text-xs uppercase tracking-widest text-muted-foreground">
            Follow our socials
          </span>
          <div class="flex flex-wrap justify-center gap-4">
            {Object.entries(socials).map(([platform, socialData]) => {
              if (!socialData || !socialData.link) return null;

              const Icon = socialIcons[platform.toLowerCase()];
              return (
                <a
                  href={socialData.link}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="anim-social-icon opacity-0 scale-50 p-3 rounded-full bg-background border border-border/50 hover:border-primary hover:text-primary transition-all duration-300"
                  aria-label={`Follow on ${platform}`}
                  title={socialData.handle ? `@${socialData.handle}` : platform}
                >
                  {Icon ? (
                    <Icon class="size-5" />
                  ) : (
                    <span class="capitalize font-mono text-xs">{platform}</span>
                  )}
                </a>
              );
            })}
          </div>
        </div>
      )
    }
  </section>
</PageLayout>

<script>
  import gsap from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";
  import { SplitText } from "gsap/SplitText";

  if (typeof window !== "undefined") {
    gsap.registerPlugin(ScrollTrigger, SplitText);

    const headerTl = gsap.timeline({
      defaults: { ease: "power3.out" },
    });

    const titleSplit = SplitText.create(".anim-header-title", {
      type: "lines, words",
      linesClass: "overflow-hidden",
    });

    headerTl
      .to(".anim-header-badge", {
        scale: 1,
        opacity: 1,
        duration: 0.8,
        ease: "back.out(1.7)",
      })
      .set(".anim-header-title", { autoAlpha: 1 }, "-=0.4")
      .from(
        titleSplit.words,
        {
          yPercent: 100,
          opacity: 0,
          duration: 1,
          stagger: 0.05,
          ease: "power4.out",
        },
        "<"
      )
      .to(
        ".anim-header-desc",
        {
          y: 0,
          opacity: 1,
          duration: 0.8,
        },
        "-=0.6"
      );

    gsap.to(".anim-contact-card", {
      y: 0,
      opacity: 1,
      duration: 0.8,
      stagger: 0.15,
      ease: "power2.out",
      scrollTrigger: {
        trigger: ".anim-contact-card",
        start: "top 85%",
      },
    });

    const socialTl = gsap.timeline({
      scrollTrigger: {
        trigger: ".anim-socials-wrapper",
        start: "top 90%",
      },
    });

    socialTl
      .to(".anim-socials-wrapper", {
        y: 0,
        opacity: 1,
        duration: 0.8,
        ease: "power2.out",
      })
      .to(
        ".anim-social-icon",
        {
          scale: 1,
          opacity: 1,
          duration: 0.5,
          stagger: 0.05,
          ease: "back.out(2)",
        },
        "-=0.4"
      );
  }
</script>
