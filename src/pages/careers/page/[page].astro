---
import { getCollection } from "astro:content";
import type { CollectionEntry } from "astro:content";
import { SITE_DESCRIPTION, SITE_TITLE } from "@/consts";
import ClickableCard from "@/components/astro/Card/ClickableCard.astro";
import PageLayout from "@/layouts/PageLayout.astro";
import MapPin from "@tabler/icons/outline/map-pin.svg";
import ArrowNarrowRight from "@tabler/icons/outline/arrow-narrow-right.svg";
import CalendarWeek from "@tabler/icons/outline/calendar-week.svg";
import Badge from "@/components/astro/Badge.astro";
import type { GetStaticPaths, Page } from "astro";
import { PAGE_SIZE } from "@/consts";
import Pagination from "@/components/astro/Pagination.astro";

export const getStaticPaths: GetStaticPaths = async ({ paginate }) => {
  const allVacancies = (
    await getCollection("careers", ({ data }) => {
      // In production, filter out drafts.
      return import.meta.env.MODE !== "production" || data.draft === false;
    })
  ).sort((a, b) => b.data.postedDate.valueOf() - a.data.postedDate.valueOf());

  return paginate(allVacancies, {
    pageSize: PAGE_SIZE,
  });
};

interface Props {
  page: Page<CollectionEntry<"careers">>;
}

const { page } = Astro.props;
---

<PageLayout title={SITE_TITLE} description={SITE_DESCRIPTION}>
  <section class="min-h-40 flex flex-col items-center justify-center gap-4">
    <Badge variant={"secondary"} size={"sm"}>Careers</Badge>
    <h1 class="text-6xl font-medium text-center">
      Your Next Chapter Starts Here
    </h1>
  </section>

  <section class="space-y-4 mb-12">
    <h1 class="mb-6 text-3xl">Open Positions</h1>
    {
      page.data.map((vacancy) => (
        <ClickableCard
          class="group relative block w-full rounded-lg border border-border bg-secondary p-5 text-secondary-foreground shadow-sm transition-all duration-300 hover:border-primary hover:bg-accent hover:text-accent-foreground focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2"
          href={`/careers/${vacancy.id}/`}
        >
          <div class="flex flex-col gap-2">
            <div class="flex items-center justify-between">
              <span class="text-sm font-medium text-primary">
                {vacancy.data.company?.name ?? "In-house"}
              </span>
              <Badge
                size={"xs"}
                variant={
                  vacancy.data.status === "closed" ? "destructive" : "default"
                }
              >
                {vacancy.data.status === "closed"
                  ? "Closed"
                  : vacancy.data.type}
              </Badge>
            </div>

            <h3 class="text-xl font-bold  group-hover:underline">
              {vacancy.data.title}
            </h3>

            <div class="flex flex-wrap items-center gap-x-4 gap-y-1 pt-1 text-sm text-muted-foreground">
              {vacancy.data.closingDate && (
                <span class="flex items-center gap-1.5">
                  <CalendarWeek class={"size-4"} />
                  Closes:{" "}
                  {vacancy.data.closingDate.toLocaleDateString(undefined, {
                    year: "numeric",
                    month: "short",
                    day: "numeric",
                  })}
                </span>
              )}
            </div>
            <div class="flex flex-row items-center justify-between mt-auto">
              <span class="flex items-center gap-1.5">
                <MapPin class="size-4" />
                {vacancy.data.location}
              </span>
              <a
                class="text-sm font-medium flex flex-row gap-2 items-center hover:underline"
                href={`/careers/${vacancy.id}/`}
              >
                Learn more <ArrowNarrowRight class="w-4 h-4" />
              </a>
            </div>
          </div>
        </ClickableCard>
      ))
    }
    <div class="flex justify-center mt-8">
      <Pagination url={page.url} />
    </div>
  </section>
</PageLayout>
