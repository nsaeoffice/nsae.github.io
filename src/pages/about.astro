---
import PageLayout from "@/layouts/PageLayout.astro";
import Badge from "@/components/astro/Badge.astro";
import Button from "@/components/astro/Button/Button.astro";
import { Image } from "astro:assets";
import { getCollection } from "astro:content";

import ArrowRight from "@tabler/icons/outline/arrow-right.svg";
import Leaf from "@tabler/icons/outline/leaf.svg";
import Bulb from "@tabler/icons/outline/bulb.svg";
import Users from "@tabler/icons/outline/users.svg";
import Gavel from "@tabler/icons/outline/gavel.svg";
import Book from "@tabler/icons/outline/book.svg";

const allCommittees = (
  await getCollection("committees", ({ data }) => {
    return import.meta.env.MODE !== "production" || data.draft === false;
  })
).sort(
  (a, b) =>
    b.data.committeeIteration.valueOf() - a.data.committeeIteration.valueOf()
);

const latestCommittee = allCommittees[0];
const featuredMembers =
  latestCommittee?.data.committeeMembers.slice(0, 4) || [];

const values = [
  {
    title: "Innovation",
    icon: Bulb,
    description: "Pushing the boundaries of agricultural technology.",
  },
  {
    title: "Sustainability",
    icon: Leaf,
    description: "Promoting practices that ensure long-term health.",
  },
  {
    title: "Community",
    icon: Users,
    description: "Building a strong network of engineers and farmers.",
  },
];

const focusAreas = [
  {
    title: "Policy Advocacy",
    icon: Gavel,
    content:
      "Working with government bodies to shape agricultural policies that benefit the nation and the engineering profession.",
  },
  {
    title: "Professional Development",
    icon: Users,
    content:
      "Organizing workshops, trainings, and conferences to enhance the skills and knowledge of our members.",
  },
  {
    title: "Research & Development",
    icon: Bulb,
    content:
      "Promoting and publishing innovative research to solve real-world agricultural challenges in Nepal.",
  },
  {
    title: "Education Support",
    icon: Book,
    content:
      "Collaborating with universities to improve curriculum and support student engineers.",
  },
];

const AboutHeroImg =
  "https://plus.unsplash.com/premium_photo-1661962692059-55d5a4319814?q=80&w=1074&auto=format&fit=crop";

function formatPosition(position: string) {
  return position
    .split("-")
    .map((word) => word.charAt(0).toUpperCase() + word.slice(1))
    .join(" ");
}
---

<PageLayout
  title="About Us - NSAE"
  description="Engineering the Future of Agriculture in Nepal."
>
  <section
    class="about-hero-section rounded-2xl relative flex min-h-[60vh] md:min-h-[90vh] items-center overflow-hidden px-6 py-20 md:px-12 md:py-32 text-white"
  >
    <div
      class="about-est-text absolute top-32 left-6 md:left-12 z-20 hidden md:block opacity-0"
    >
      <span
        class="font-mono text-xs text-white/60 tracking-widest uppercase vertical-lr"
      >
        [ EST. 1990 ]
      </span>
    </div>

    <div class="relative z-20 flex max-w-4xl flex-col gap-6 md:gap-8 mt-12">
      <div class="anim-hero-badge opacity-0 translate-y-4">
        <Badge
          variant="outline"
          class="w-fit font-mono text-xs uppercase tracking-widest border-white/30 text-white"
        >
          Who We Are
        </Badge>
      </div>

      <h1
        class="font-sans text-5xl md:text-7xl lg:text-8xl font-medium leading-[1.02] tracking-tighter invisible"
      >
        <span class="anim-split-text inline-block">Engineering the</span>
        <br />
        <span class="anim-split-text inline-block text-white/80"
          >Future of Agriculture</span
        >
      </h1>

      <p
        class="anim-hero-desc font-sans text-lg md:text-xl text-white/90 max-w-2xl leading-relaxed opacity-0 translate-y-4"
      >
        The Nepal Society of Agricultural Engineers (NSAE) is dedicated to
        advancing the profession and promoting sustainable agricultural
        practices across the nation.
      </p>
    </div>

    <div class="absolute inset-0 z-10">
      <div
        class="absolute inset-0 z-20 bg-gradient-to-r from-black/90 via-black/60 to-black/20"
      >
      </div>
      <div class="absolute inset-0 z-10 bg-black/20"></div>
      <img
        class="anim-hero-image absolute inset-0 h-full w-full object-cover scale-110"
        alt="Agricultural Engineering Field"
        src={AboutHeroImg}
      />
    </div>
  </section>

  <div class="space-y-12 pt-24 md:pt-32 mb-0">
    <section class="mission-section">
      <div
        class="flex flex-col lg:flex-row justify-between items-start gap-12 lg:gap-24 border-b border-border/50 pb-12"
      >
        <div class="flex flex-col gap-8 lg:w-1/2 lg:sticky lg:top-32">
          <div class="anim-mission-header flex items-center gap-4 opacity-0">
            <Badge
              class="font-mono text-xs uppercase tracking-widest"
              size="sm"
            >
              ( 01 )
            </Badge>
            <span
              class="font-mono text-xs text-muted-foreground uppercase tracking-widest"
            >
              Our Mission
            </span>
          </div>
          <h2
            class="anim-split-heading invisible font-sans text-4xl md:text-6xl font-medium tracking-tighter leading-tight"
          >
            Bridging traditional farming with modern engineering.
          </h2>

          <div class="grid gap-6">
            {
              values.map((val) => (
                <div class="anim-value-card group flex gap-4 p-5 rounded-xl border border-border/50 bg-card/50 hover:bg-secondary/40 transition-colors opacity-0 translate-y-8">
                  <div class="p-2 h-fit rounded-lg bg-primary/10 text-primary shrink-0">
                    <val.icon class="size-6" />
                  </div>
                  <div>
                    <h3 class="font-sans font-medium text-lg mb-1 text-foreground">
                      {val.title}
                    </h3>
                    <p class="font-sans text-sm text-foreground/70 leading-relaxed">
                      {val.description}
                    </p>
                  </div>
                </div>
              ))
            }
          </div>
        </div>

        <div
          class="lg:w-1/2 prose prose-lg prose-headings:font-sans prose-p:font-sans dark:prose-invert"
        >
          <div class="anim-mission-text opacity-0 translate-y-8">
            <p class="lead text-xl font-medium text-foreground">
              Our mission is to unite agricultural engineers under a common
              umbrella to foster professional growth, ethical standards, and
              technological advancement.
            </p>
          </div>
          <div class="anim-mission-text opacity-0 translate-y-8">
            <p class="text-foreground/80">
              By collaborating with governmental bodies, educational
              institutions, and the private sector, we strive to influence
              policies that enhance food security and rural development.
            </p>
          </div>
          <div class="anim-mission-text opacity-0 translate-y-8">
            <p class="text-foreground/80">
              We believe that engineering solutions are the key to unlocking
              Nepal's agricultural potential. From irrigation systems to
              post-harvest technology, our members are at the forefront of
              innovation.
            </p>
          </div>
        </div>
      </div>
    </section>

    <section class="focus-section pt-24 md:pt-32 mb-0">
      <div
        class="flex flex-col md:flex-row justify-between items-end mb-12 gap-6"
      >
        <div class="space-y-4">
          <div class="anim-focus-header flex items-center gap-4 mb-4 opacity-0">
            <Badge
              class="font-mono text-xs uppercase tracking-widest"
              size="sm"
            >
              ( 02 )
            </Badge>
            <span
              class="font-mono text-xs text-muted-foreground uppercase tracking-widest"
            >
              What We Do
            </span>
          </div>
          <h2
            class="anim-split-heading font-sans text-4xl md:text-5xl font-medium tracking-tighter text-balance invisible"
          >
            Strategic Focus
          </h2>
        </div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {
          focusAreas.map((area) => (
            <div class="anim-focus-card p-8 rounded-2xl bg-secondary/30 border border-border/50 hover:border-primary/50 transition-colors group opacity-0 translate-y-12">
              <div class="mb-6 w-12 h-12 rounded-full bg-background border border-border flex items-center justify-center text-muted-foreground group-hover:text-primary group-hover:border-primary/50 transition-colors">
                <area.icon class="size-6" />
              </div>
              <h3 class="font-sans text-2xl font-medium mb-3 text-foreground">
                {area.title}
              </h3>
              <p class="font-sans text-foreground/70 leading-relaxed">
                {area.content}
              </p>
            </div>
          ))
        }
      </div>
    </section>

    <section class="team-section pt-24 md:pt-32 mb-0">
      <div
        class="flex flex-col md:flex-row justify-between items-end pb-12 gap-6"
      >
        <div class="space-y-4">
          <div class="anim-team-header flex items-center gap-4 mb-4 opacity-0">
            <Badge
              class="font-mono text-xs uppercase tracking-widest"
              size="sm"
            >
              ( 03 )
            </Badge>
            <span
              class="font-mono text-xs text-muted-foreground uppercase tracking-widest"
            >
              Leadership
            </span>
          </div>
          <h2
            class="anim-split-heading font-sans text-4xl md:text-5xl font-medium tracking-tighter text-balance"
          >
            Executive Committee
          </h2>
          {
            latestCommittee && (
              <p class="anim-team-iter font-mono text-sm text-muted-foreground uppercase tracking-widest opacity-0">
                Current Iteration: {latestCommittee.data.committeeIteration}
              </p>
            )
          }
        </div>
        <div class="anim-team-btn opacity-0">
          <Button
            href={`/past-committee/${latestCommittee?.id}`}
            variant="ghost"
            class="hidden md:flex font-mono text-xs uppercase tracking-widest gap-2"
          >
            View Full Committee <ArrowRight class="size-4" />
          </Button>
        </div>
      </div>

      {
        latestCommittee ? (
          <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
            {featuredMembers.map((member) => (
              <div class="anim-member-card relative overflow-hidden rounded-lg shadow-lg group opacity-0 translate-y-12">
                {member.profileImage ? (
                  <Image
                    src={member.profileImage}
                    inferSize
                    alt={`Profile picture of ${member.name}`}
                    class="aspect-3/4 w-full object-cover transition-transform duration-300 group-hover:scale-105"
                  />
                ) : (
                  <div class="aspect-3/4 w-full bg-secondary flex items-center justify-center" />
                )}

                <div class="absolute bottom-4 right-4 bg-black/70 p-3 rounded-md text-white">
                  <span class="block text-sm font-semibold">{member.name}</span>
                  <span class="block text-xs">
                    {formatPosition(member.position)}
                  </span>
                </div>
              </div>
            ))}
          </div>
        ) : (
          <div class="text-center py-12 border border-dashed border-border rounded-xl">
            <p class="text-muted-foreground">
              Committee information unavailable.
            </p>
          </div>
        )
      }

      <div class="mt-8 md:hidden flex justify-center">
        <Button
          href={`/past-committee/${latestCommittee?.id}`}
          variant="outline"
          class="font-mono text-xs uppercase tracking-widest"
        >
          View Full Committee
        </Button>
      </div>
    </section>

    <section class="py-24 md:py-32">
      <div
        class="anim-cta-box bg-secondary text-secondary-foreground rounded-3xl p-8 md:p-16 text-center flex flex-col items-center gap-8 relative overflow-hidden opacity-0 scale-95"
      >
        <div class="relative z-10 flex flex-col items-center gap-6">
          <h2
            class="font-sans text-3xl md:text-5xl font-medium tracking-tighter max-w-2xl"
          >
            Ready to shape the future of agriculture?
          </h2>
          <p class="text-secondary-foreground/80 max-w-xl font-sans text-lg">
            Join a community of innovators, researchers, and engineers working
            towards a sustainable future.
          </p>
          <Button
            href="/contact"
            variant="secondary"
            class="rounded-full px-8 py-6 font-sans font-medium text-lg"
          >
            Join the Collective
          </Button>
        </div>

        <div
          class="absolute top-0 left-0 w-full h-full bg-gradient-to-br from-white/10 to-transparent pointer-events-none"
        >
        </div>
      </div>
    </section>
  </div>
</PageLayout>

<script>
  import gsap from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";
  import { SplitText } from "gsap/SplitText";

  if (typeof window !== "undefined") {
    gsap.registerPlugin(ScrollTrigger, SplitText);

    const heroTl = gsap.timeline({
      defaults: { ease: "power3.out" },
    });

    const heroSplit = SplitText.create(".anim-split-text", {
      type: "lines",
      linesClass: "line-inner will-change-transform overflow-hidden",
    });

    heroTl.from(
      ".anim-hero-image",
      {
        scale: 1.2,
        duration: 2.5,
        ease: "expo.out",
      },
      0
    );

    heroTl.to(
      ".about-est-text",
      {
        opacity: 1,
        y: 0,
        startAt: { y: -20 },
        duration: 1.5,
      },
      0.2
    );

    heroTl.to(
      ".anim-hero-badge",
      {
        opacity: 1,
        y: 0,
        duration: 1,
      },
      0.3
    );

    heroTl.set(".about-hero-section h1", { autoAlpha: 1 }, 0.4).from(
      heroSplit.lines,
      {
        yPercent: 100,
        opacity: 0,
        duration: 1.2,
        stagger: 0.1,
        ease: "power4.out",
      },
      "<"
    );

    heroTl.to(
      ".anim-hero-desc",
      {
        y: 0,
        opacity: 1,
        duration: 1,
      },
      0.8
    );

    gsap.to(".anim-hero-image", {
      yPercent: 20,
      ease: "none",
      scrollTrigger: {
        trigger: ".about-hero-section",
        start: "top top",
        end: "bottom top",
        scrub: true,
      },
    });

    const missionSplit = SplitText.create(
      ".mission-section .anim-split-heading",
      {
        type: "lines, words",
        linesClass: "overflow-hidden",
      }
    );

    const missionTl = gsap.timeline({
      scrollTrigger: {
        trigger: ".mission-section",
        start: "top 75%",
      },
    });

    missionTl
      .to(".anim-mission-header", { opacity: 1, duration: 0.5 })
      .set(".mission-section .anim-split-heading", { autoAlpha: 1 }, "-=0.3")
      .from(
        missionSplit.words,
        {
          yPercent: 100,
          duration: 0.8,
          stagger: 0.02,
          ease: "power4.out",
        },
        "<"
      )
      .to(
        [".anim-value-card", ".anim-mission-text"],
        {
          y: 0,
          opacity: 1,
          duration: 0.8,
          stagger: 0.1,
          ease: "power3.out",
        },
        "-=0.5"
      );

    const focusSplit = SplitText.create(".focus-section .anim-split-heading", {
      type: "lines, chars",
      linesClass: "overflow-hidden",
    });

    const focusTl = gsap.timeline({
      scrollTrigger: {
        trigger: ".focus-section",
        start: "top 70%",
      },
    });

    focusTl
      .to(".anim-focus-header", { opacity: 1, duration: 0.5 })
      .set(".focus-section .anim-split-heading", { autoAlpha: 1 }, "-=0.3")

      .from(
        focusSplit.chars,
        {
          opacity: 0,
          y: 20,
          duration: 0.5,
          stagger: 0.02,
          ease: "back.out",
        },
        "<"
      )
      .to(
        ".anim-focus-card",
        {
          y: 0,
          opacity: 1,
          duration: 0.8,
          stagger: 0.1,
          ease: "power3.out",
        },
        "-=0.3"
      );

    const teamTl = gsap.timeline({
      scrollTrigger: {
        trigger: ".team-section",
        start: "top 70%",
      },
    });

    teamTl
      .to([".anim-team-header", ".anim-team-iter", ".anim-team-btn"], {
        opacity: 1,
        duration: 0.5,
        stagger: 0.1,
      })
      .to(
        ".anim-member-card",
        {
          y: 0,
          opacity: 1,
          duration: 0.8,
          stagger: 0.1,
          ease: "power3.out",
        },
        "-=0.3"
      );

    gsap.to(".anim-cta-box", {
      opacity: 1,
      scale: 1,
      duration: 1,
      ease: "elastic.out(1, 0.75)",
      scrollTrigger: {
        trigger: ".anim-cta-box",
        start: "top 85%",
      },
    });
  }
</script>
